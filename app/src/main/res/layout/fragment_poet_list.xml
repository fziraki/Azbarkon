<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_c7b299"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/contextMenu"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardBackgroundColor="@color/color_8b7160"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pin"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:src="@drawable/ic_filled_pin"
                app:tint="@color/color_efeddd" />

            <TextView
                android:id="@+id/selectedItemsCount"
                app:layout_constraintStart_toEndOf="@+id/close"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                tools:text="5"
                android:textColor="@color/color_efeddd"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/close"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:src="@drawable/ic_close"
                app:tint="@color/color_efeddd" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/poetListRv"
        app:layout_constraintTop_toBottomOf="@+id/contextMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="4dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchview"
        app:queryHint="نام شاعر..."
        android:background="@drawable/rounded_rect_10dp"
        android:backgroundTint="@color/brownAlpha"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="48dp"
        android:layout_marginHorizontal="32dp"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        app:searchHintIcon="@null"
        android:visibility="gone"
        />


</androidx.constraintlayout.widget.ConstraintLayout>