<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_c7b299">

    <WebView
        android:id="@+id/poem"
        tools:text="شاعر"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomMenu"
        android:layout_marginHorizontal="16dp"
        android:scrollbars="none"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_8b7160"
        android:layout_width="match_parent"
        android:paddingHorizontal="16dp"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/toggleBookmark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="14dp"
            android:src="@drawable/ic_like_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/color_efeddd" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="14dp"
            android:src="@drawable/ic_share"
            app:layout_constraintEnd_toStartOf="@+id/toggleBookmark"
            app:tint="@color/color_efeddd" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>